# Home Assistant Configuration
# Copy this file to .env and fill in your values

# Your Home Assistant URL (e.g., http://192.168.1.100:8123 or http://homeassistant.local:8123)
HA_URL=http://homeassistant.local:8123

# Your Long-Lived Access Token from Home Assistant
# To create one: Profile -> Security -> Long-Lived Access Tokens -> Create Token
HA_TOKEN=your_long_lived_access_token_here

# Server port (optional, defaults to 3000)
PORT=3000
